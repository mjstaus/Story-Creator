<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TellMyStory</title>
  <link rel="shortcut icon" type="image/png" href="/images/open_book.png"/>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

</head>
<body>
  <header>
    <div class="nav-logo">
    <img src="/images/book_stack.png">
    <a href="/">TellMyStory</a>
    </div>

    <a href="/users/1/dashboard" class="login button">Login</a>
  </header>

<div class="main">
<section class="hero">
  <div class="hero_copy">
    <h2>Tell My Story</h2>
    <div class="subheading">
      <div class="sub_item">
        <img src="/images/pencil.png">
        <p>Tell a story</p>
      </div>
      <div class="sub_item">
        <img src="/images/heart.png">
        <p>Add to a story</p>
      </div>
      <div class="sub_item">
        <img src="/images/closed_book.png">
        <p>Read a story</p>
      </div>
    </div>
    <a href="#" class="button">START NOW</a>
  </div>
  <div class="hero_image">
    <img src="/images/hero.png">
  </div>
</section>
<section class="discover">
  <div class="container">
  <h2>Discover Stories</h2>
<% for (let story of stories) { %>
    <div class="storybox">
      <p><%= story.title %></p>
      <img>
    </div>
  <% } %>
  </div>
</section>
</div>

<%-include("partials/_footer")%>
