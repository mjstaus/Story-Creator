<%-include("../partials/_header")%>
<%-include("../partials/_navbar")%>

<h1>Show one story</h1>
  <ul><%= stories.title %></ul>
  <ul><%= stories.initial_content %></ul>

<h3>Edit Story</h3>
  <form action="/stories/:id" method="POST">
    <div>
      <label for="title">New Title</label>
      <input type="text" name="title" placeholder="<%= stories.title %>">
      <label for="initialContent">Edit Story</label>
      <input type="text" name="initialContent" placeholder="<%= stories.initial_content %>">
      <button type="submit">Submit</button>
    </div>
  </form>

<%-include("../partials/_footer")%>
